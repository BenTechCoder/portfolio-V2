<div class="portfolio__item flow">
  <a href="{{ portfolioitem.data.source }}">
    <h4>{{ portfolioitem.data.title }}</h4></a
  >

  <div class="img-cover">

    
   {% image portfolioitem.data.image, portfolioitem.data.imageAlt %}

  </div>
  <p>{{ portfolioitem.data.description }}</p>
  <div class="btn--portfolio">
    <a
      href="{{ portfolioitem.data.demo }}"
      rel="noopener"
      class="portfolio-btns"
    >
      <img src="\assets\icons\github.svg" alt="Github Link" /> Source</a
    >
    <a
      href="{{ portfolioitem.data.source }}"
      rel="noopener"
      class="portfolio-btns"
      ><img src="\assets\icons\global.svg" alt="Live Site Link" />Live site</a
    >
  </div>
</div>
